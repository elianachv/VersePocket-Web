<body>
    <div class="descripcion">
        <h1 class="titulo cita_versiculo display-4">{{categoria.nombre}}</h1>
        <p class="texto_categoria">{{categoria.descripcion}}</p>
    </div>

    <div class="container detalles_categoria">
        <ul class="">
            <li class="detalle_categoria">Fecha de creación:<br><span class="detalle_descripcion">
                    <p>{{categoria.fecha}}</p>
                </span></li>

            <li class="detalle_categoria">Versículos asociados:<br>
                <span class="detalle_descripcion">
                    <div class="container">
                        <ul class="list-group list-group-flush versiculos_asociados">
                            <li class="list-group-item">Hebreos 12:2</li>
                            <li class="list-group-item">Romanos 5:1</li>
                        </ul>
                    </div>
                </span>
            </li>
        </ul>
    </div>


    <div class="opciones">
        <a href="/categoria/editar/{{categoria._id}}">
            <div>
                <img class="opcion" src="/icon/icono_editar.svg" alt="editar">
                <p>Editar</p>
            </div>
        </a>
        <form action="/categoria/eliminar/{{categoria._id}}?_method=DELETE" method="POST">

            <div>
                <input type="hidden" name="_method" value="DELETE">
                <button class="boton_eliminar" type="submit">
                    <img class="opcion" src="/icon/icono_eliminar.svg" alt="eliminar">
                    <p>Eliminar</p>
                </button>
            </div>
        </form>
        <a href="">
            <div>
                <img class="opcion" src="/icon/icono_ordenar.svg" alt="ordenar">
                <p>Ordenar</p>
            </div>
        </a>



    </div>

</body>