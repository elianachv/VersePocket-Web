{{#if error}}
<div class="alert alert-danger alert-dismissible fade show mensaje_error" role="alert">
    <strong>Error</strong><br> {{error}}.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

{{#each errores}}
<div class="alert alert-danger alert-dismissible fade show mensaje_error" role="alert">
    <strong>Error</strong> <br>{{texto}}.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}